{
  "name": "erp_system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:report": "eslint --ext .jsx,.js --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif ./**/src",
    "lint:js:fix": "eslint . --fix --ext .js",
    "lint:css": "stylelint **/*.{scss,css}",
    "lint:css:fix": "stylelint --fix **/*.{scss,css}",
    "format": "prettier --check \"./**/*.json\"",
    "format:fix": "prettier --write \"./**/*.json\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:json",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:json:fix",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@storybook/addon-essentials": "^7.6.8",
    "@storybook/addon-interactions": "^7.6.8",
    "@storybook/addon-links": "^7.6.8",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.8",
    "@storybook/nextjs": "^7.6.8",
    "@storybook/react": "^7.6.8",
    "@storybook/test": "^7.6.8",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.33",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sass": "^1.69.7",
    "storybook": "^7.6.8",
    "stylelint": "^16.1.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.0.0",
    "tailwindcss": "^3.3.0",
    "vitest": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --verbose -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  }
}
